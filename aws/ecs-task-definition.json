{
    "family": "blinklean-production-cluster",
    "networkMode": "awsvpc",
    "executionRoleArn": "arn:aws:iam::123456789012:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::123456789012:role/ecsTaskRole",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "1024",
    "memory": "2048",
    "containerDefinitions": [
        {
            "name": "blinklean-backend",
            "image": "123456789012.dkr.ecr.ap-south-1.amazonaws.com/blinklean/backend:latest",
            "portMappings": [
                {
                    "containerPort": 3000,
                    "hostPort": 3000,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "PORT",
                    "value": "3000"
                },
                {
                    "name": "NODE_ENV",
                    "value": "production"
                },
                {
                    "name": "AI_SERVICE_URL",
                    "value": "http://127.0.0.1:8000"
                }
            ],
            "secrets": [
                {
                    "name": "DATABASE_URL",
                    "valueFrom": "arn:aws:ssm:ap-south-1:123456789012:parameter/blinklean/production/DATABASE_URL"
                },
                {
                    "name": "REDIS_HOST",
                    "valueFrom": "arn:aws:ssm:ap-south-1:123456789012:parameter/blinklean/production/REDIS_HOST"
                },
                {
                    "name": "JWT_SECRET",
                    "valueFrom": "arn:aws:ssm:ap-south-1:123456789012:parameter/blinklean/production/JWT_SECRET"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/blinklean-backend",
                    "awslogs-region": "ap-south-1",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "dependsOn": [
                {
                    "containerName": "blinklean-ai",
                    "condition": "START"
                }
            ]
        },
        {
            "name": "blinklean-ai",
            "image": "123456789012.dkr.ecr.ap-south-1.amazonaws.com/blinklean/ai-service:latest",
            "portMappings": [
                {
                    "containerPort": 8000,
                    "hostPort": 8000,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "PORT",
                    "value": "8000"
                },
                {
                    "name": "ENVIRONMENT",
                    "value": "production"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/blinklean-ai",
                    "awslogs-region": "ap-south-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
}